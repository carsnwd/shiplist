<%= javascript_include_tag 'listings.js' %>
<div class="topbar">
  <div class="container">
    <div class="vertical-center">
      rubyslist > jobs > accounting
    </div>
  </div>
</div>
<div class="container">
  <div id="contact-area">
    <%= form_for @listing do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>
      <%= f.label :description %>
      <%= f.text_area :description %>
      <%= f.label :contact %>
      <%= f.text_field :contact %>
      <%= f.label :category_id %>
      <p><%= f.select :category_id, Category.all.map { |f| [f.name, f.id]} %></p>
      <%= f.label :subcategory_id %>
      <p><%= f.select :subcategory_id, options_for_select([])%></p>
      <%= f.submit class: "create-button" %>
    <% end %>
  </div>
</div>
